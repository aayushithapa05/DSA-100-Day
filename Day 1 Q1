#include <stdio.h>

int main() {
    int n,temp;
    printf("Enter the number of element ");
    scanf("%d",&n);
    int arr[n];
    printf("Enter the elements ");
    for (int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    int index,ele;
    printf("Enter the index u want to insert the element");
    scanf("%d",&index);
    printf("Enter the element");
    scanf("%d",&ele);
    for (int i=index;i<n+1;i++)
    {
        if(i==index)
        {
            temp=arr[i];
            arr[i]=ele;
            
        }
        temp=arr[i+1]+temp;
        arr[i+1]=temp-arr[i+1];
        temp=temp-arr[i+1];
        
    }
    for(int i=0;i<=n;i++)
    {
        printf("%d ",arr[i]);
    }
    return 0;
}
