#include <stdio.h>
#include <string.h>

int isPalindrome(char word[]) {
    int left = 0;
    int right = strlen(word) - 1;

    while(left < right) {
        if(word[left] != word[right])
            return 0;
        left++;
        right--;
    }
    return 1;
}

int main() {
    char word[100];

    printf("Enter a word: ");
    scanf("%s", word);

    if(isPalindrome(word))
        printf("Palindrome");
    else
        print
